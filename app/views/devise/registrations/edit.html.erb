<div>
  <h1 class="text-center">Editar Configurações de Conta</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Digite seu email' %>
      <small id="emailHelp" class="form-text text-muted">Não iremos compartilhar seus dados com ninguém.</small>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Esperando confirmação de: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, 'Senha' %> <i>(deixe em branco se não quiser alterar)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
        <small id="pwHelp" class="form-text text-muted">Mínimo de <%= @minimum_password_length %> characteres</small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmação de Senha' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, 'Senha atual' %> <i>(precisamos da senha atual para mudá-la)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <div class="btn-group d-flex">
      <%= f.submit "Atualizar", class: 'btn btn-success' %>
    </div>
  <% end %>

  <hr>

  <h2>Cancelamento da conta</h2>

  <p>Deseja cancelar sua conta?</p>
  <div class="btn-group" role="group">
    <%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, class: 'btn btn-danger' %>

    <%= link_to "Voltar", :back, class: 'btn btn-secondary' %>
  </div>
</div>
