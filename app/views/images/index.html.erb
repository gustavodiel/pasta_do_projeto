<div>
  <h1>Images</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image_tag image.file.representation(resize_to_limit: [52, 52]) %></td>
          <td><%= image.name %></td>
          <td>
            <div class="btn-group">
              <%= link_to 'Detalhes', image, class: 'btn btn-primary' %>
              <%= link_to 'Editar', edit_image_path(image), class: 'btn btn-warning' %>
              <%= link_to 'Deletar', image, method: :delete, data: { confirm: 'Certeza?' }, class: 'btn btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr>

  <%= link_to 'Nova imagem', new_image_path, class: 'btn btn-primary' %>
</div>
